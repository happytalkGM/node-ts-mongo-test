{
  "compilerOptions": {
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": false, // orig: true

    // base
    "module": "CommonJS",
    "target": "ES2020",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
    },
    "lib": [
      "es2021",
      "es2022.error"
    ]
  },
  "reflection": true,
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "tsconfig",
    "**/*.spec.ts"
  ]
}